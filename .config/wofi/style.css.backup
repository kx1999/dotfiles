window {
    font-size: 14;
    opacity: 0.9;
    margin: 2px;
    border: 2px solid #E747C2;
    border-radius: 15px;
    background-color: #151D2B;
}

#outer-box {
    margin: 10px;
}

#input {
    font-size: 18;
    margin: 5px;
    padding-top: 5px;
    padding-bottom: 5px;
    padding-left: 15px;
    padding-right: 15px;
    border: 1px solid #70e8ff;
    border-radius: 10px;
    background-color: #151D2B;
}

#entry {
    margin: 5px;
    border: 1px transparent #5170a6;
    border-radius: 10px;
    background-color: #151D2B;
}

#scroll {
    margin: 5px;
    border: 1px solid #2c3c59;
    border-radius: 12px;
    background-color: #151D2B;
}

#selected {
    background-color: #2c3c59;
    border-radius: 10px;
    margin: 5px;
    padding: 10px;
}   

#text {
    padding-left: 15px;
    color: #ffffff;
}

#text:selected {
    background: #2c3c59;
    color: #44FFAA;
}

expander > list > #entry {
    background: #101621;
}
expander > list > #entry:selected {
    background-color: #2c3c59;
}
